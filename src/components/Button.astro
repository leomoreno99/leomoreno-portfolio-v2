---
const { href, ariaLabel } = Astro.props;
---

<a
    target="_blank"
    href={href}
    role="link"
    rel="noreferrer"
    aria-label={ariaLabel}
    class="inline-flexitems-center justify-center gap-2 px-4 py-2 xl:px-6 xl:py-3 space-x-2 select-none md:text-md xl:text-xl rounded-full transition duration-300 text-white border border-white/50 focus-visible:ring-yellow-500/80 text-md hover:text-yellow-500 hover:border-yellow-500"
>
    <slot />
</a>
